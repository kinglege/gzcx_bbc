.list-masonry {
  column-count: 2;
  column-gap: 20rpx;
}

.item-masonry {
  width: 100%;
  background-color: #fff;
  break-inside: avoid; /*避免在元素内部插入分页符*/
  box-sizing: border-box;
}

.item-masonry .topicImg image {
  width: 100%;
}
.bgHui{
  height: 20rpx;
  background: #f8f8f8;
  width: 100%;
}
.pho  {
  width:40rpx;
  height: 40rpx;
}

.pho image {
  width:40rpx;
  height: 40rpx;
  border-radius: 100%;
}

.content {
  margin: 0 20rpx;
  text-align: justify;
}
