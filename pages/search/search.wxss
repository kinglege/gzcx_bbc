/* 切换 */

.tab-box {
  width: 100%;
  height: 80rpx;
  display: flex;
  background: white;
  overflow: hidden;
}

.tab_box_text {
  margin-left: 60rpx;
  height: 74rpx;
  line-height: 72rpx;
  color: #666;
}

.active {
  border-bottom: 30rpx solid rgb(246, 72, 38);
  font-size: 32rpx;
  color: #0d0d0d;
  font-weight: bold;
}

.ico-xgqc {
  width: 34rpx;
  height: 44rpx;
}

.ico-xgqc image {
  width: 34rpx;
  height: 44rpx;
}

.cars-item {
  padding-bottom: 80rpx;
}

.cars image {
  width: 219rpx;
  height: 109rpx;
}

.money {
  color: rgb(245, 51, 19);
}

.ico-news {
  width: 36rpx;
  height: 36rpx;
}

.ico-news image {
  width: 36rpx;
  height: 36rpx;
}

.more_cars {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  border: solid 1rpx #e5e5e5;
  text-align: center;
  color: #999;
  font-weight: bold;
}

