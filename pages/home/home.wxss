.title {
  position: relative;
}

.hot {
  position: relative;
  top: -30px;
  left: 100px;
}

.ico-hot {
  width: 50rpx;
  height: 28rpx;
}

.next {
  height: 32rpx;
  width: 32rpx;
}

.right-n {
  transform: translateY(-8rpx);
}

.car-list {
  width: 30%;
  height: 180rpx;
}

.car-list image {
  width: 188rpx;
  height: 82rpx;
}

.item-list {
  background: rgb(248, 248, 248);
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  display: inline-block;
  margin-right: 26rpx;
  border-radius: 5rpx;
  font-size: 26rpx;

}

/* 双向滑动开始 */

slider {
  margin: 0;
}

.sliderHCon {
  height: 130rpx;
  width: 100%;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.MoneyValue {
  font-size: 22rpx;
  text-align: center;
  color: #666;
  margin-top: 15rpx;
}

.showMoney {
  display: flex;
  justify-content: space-between;
  width: 68%;
  margin-top: -34px;
  position: absolute;
  color: #666;
  font-size: 22rpx;
}

.showMoney text {
  margin-right: -67rpx;
}

.twoSlider {
  width: 93%;
  height: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}

.twoSlider .leftSliderPrice {
  position: absolute;
  top: -10rpx;
  left: 0;
  width: 100rpx;
  height: 60rpx;
  line-height: 40rpx;
  padding-left: 3rpx;
  color: #fff;
}

.sliderPrice view {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  font-size: 30rpx;
}

.twoSlider .rightSliderPrice {
  position: absolute;
  top: -12rpx;
  right: 0;
  /* width: 100rpx;*/
  height: 60rpx;
  line-height: 40rpx;
  padding-right: 95rpx;
  color: #fff;
}

.sliderView {
  /* border: solid red 1rpx; */
  color: red;
}

/* 滑动样式 */

.select-construct {
  width: 100%;
}

.select-area {
  width: 100%;
  padding: 30px 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slider-container {
  width: 100%;
  display: flex;
  padding: 20px 0 10px;
  position: relative;
}

.slider-left, .slider-right {
  margin-right: -8rpx;
}

/* 双向滑动结束 */

.btn-sum {
  background: rgb(246, 72, 38);
  color: #fff;
  width: 300rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-sum .sum {
  color: rgb(245, 175, 40);
}

.btn-more {
  width: 300rpx;
  background: rgb(68, 68, 68);
  color: #fff;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}

/* 索引 */

.indexes {
  position: relative;
}

.indexBar {
  position: fixed;
  right: 0rpx;
  top: 197rpx;
  /* padding: 20rpx 20rpx 20rpx 60rpx; */
  display: flex;
  align-items: center;
}

.indexBar .indexBar-box {
  width: 40rpx;
  height: auto;
  /* background: #fff; */
  display: flex;
  flex-direction: column;
  /* box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1); */
  border-radius: 10rpx;
}

.indexBar-item {
  flex: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #888;
}

movable-view.indexBar-item {
  width: 40rpx;
  height: 40rpx;
  z-index: 9;
  position: relative;
}

movable-view.indexBar-item::before {
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 20rpx;
  width: 4rpx;
  background-color: #f37b1d;
}

.indexToast {
  position: fixed;
  top: 0;
  right: 80rpx;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin: auto;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 48rpx;
}

.carLogo {
  width: 54rpx;
  height: 54rpx;
}

.carLogo image {
  width: 54rpx;
  height: 54rpx;
}
