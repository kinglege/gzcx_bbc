.loading-modal {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(250, 250, 250, 0);
  /* background: rgb(250, 250, 250); */
  z-index: 999;
}

.loading-modal image {
  position: absolute;
  width: 280rpx;
  height: 140rpx;
  left: calc(50% - 140rpx);
  top: 50%;
}
