<!-- 顶部 -->
<view class='cu-custom' style="height:{{CustomBar}}px;">
  <view class="cu-bar fixed bg-white" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <navigator class='action' open-type="navigateBack" delta="1" hover-class="none">
      <text class='cuIcon-back text-black'></text>
    </navigator>
    <view class='content text-black' style='top:{{StatusBar}}px;'>搜索</view>
  </view>
</view>

<view class="cu-bar bg-white search">
  <view class="search-form radius">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="搜索宝马" confirm-type="search"></input>
  </view>
</view>

<view class="margin-lr margin-top-xs">
  <view class="flex align-center">
    <view class="ico_huo">
      <image src="../../images/huo.png"></image>
    </view>
    <view class="margin-left-xs text-sm text-black">热门搜索</view>
  </view>
  <view class="record">
    <view class="search_type font-gray-666" wx:for='{{10}}'>宝马</view>
  </view>
</view>