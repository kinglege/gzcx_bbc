/* 切换 */ 
.tab-box {
  width: 100%;
  height: 80rpx;
  display: flex;
  background: white;
  z-index: 999;
  overflow: hidden;
  position: fixed;
}

.tab_box_text {
  margin-left: 60rpx;
  height: 74rpx;
  line-height: 72rpx;
  color: #666;
}

.active {
  border-bottom: 30rpx solid rgb(246, 72, 38);
  font-size: 32rpx;
  color: #0d0d0d;
  font-weight: bold;
}


.cars-item{
  padding: 80rpx 30rpx;
  border-bottom: 3rpx solid #f8f8f8;
}
.cars image{
  width: 219rpx;
  height: 109rpx;
}
.money{
  color: rgb(245,51,19);
}